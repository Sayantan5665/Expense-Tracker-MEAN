<!DOCTYPE html>
<html lang="en">
<%- include('../layouts/head.ejs') %>

<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <!-- Flash message -->
      <% if (messages.length !=0) { %>
      <% for(let i=0; i<messages.length; i++) { %>
      <div class="position-absolute" style="width: 100%; top: <%= (i * 60)+10+'px' %>;">
        <div class="alert alert-<%=messages[i].type%> fade show" style="z-index: 99999; width: auto; max-width: 40%; float: right;" id="flash-alert-<%= i * 2  %>" role="alert">
          <%= messages[i].msg %>
          <button type="button" class="btn btn-sm close" id="close" data-dismiss="alert" aria-label="Close" onclick="vanish(`#flash-alert-<%=(i * 2)%>`)">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
      <% } %>
      <% } %>

      <div class="content-wrapper d-flex align-items-center auth">
        <div class="row flex-grow">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left p-5">
              <div class="brand-logo mb-3">
                <img src="../../assets/images/logo.png">
              </div>
              <h4>Hello! Welcome Back!</h4>
              <h6 class="font-weight-light">Sign in to continue.</h6>
              <form class="pt-2" action="/admin/user/login" method="post">
                <div class="mb-2">
                  <input type="email" class="form-control form-control-sm" id="exampleInputEmail1" placeholder="Email" name="email">
                </div>
                <div class="mb-2">
                  <input type="password" class="form-control form-control-sm" id="exampleInputPassword1" placeholder="Password" name="password">
                </div>
                <div class="mt-3 d-grid gap-2">
                  <button type="submit" class="btn btn-block btn-gradient-primary btn-sm font-weight-medium auth-form-btn" style="height: auto;">SIGN IN</button>
                </div>
                <div class="my-1 d-flex justify-content-end align-items-center">
                  <!-- <div class="form-check mb-2 mt-1">
                    <label class="form-check-label text-muted">
                      <input type="checkbox" class="form-check-input"> Keep me
                      signed in </label>
                  </div> -->
                  <a href="/forgot-password" class="auth-link text-primary">Forgot password?</a>
                </div>
                <!-- <div class="mb-2 d-flex gap-2 justify-content-center">
                  <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                    <i class="mdi mdi-facebook me-2"></i>Connect using facebook
                  </button>
                  <button type="button" class="btn btn-facebook btn-rounded" style="padding: 10px;"><i class="mdi mdi-facebook"></i></button>
                  <button type="button" class="btn btn-google btn-rounded" style="padding: 10px;"><i class="mdi mdi-google-plus"></i></button>
                </div> -->
                <!-- <div class="text-center mt-3 font-weight-light"> Don't have an
                  account? <a href="/register" class="text-primary">Create</a>
                </div> -->
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->

  <!-- scripts -->
  <%- include('../layouts/scripts.ejs') %>
</body>

</html>