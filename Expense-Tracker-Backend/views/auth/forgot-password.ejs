<!DOCTYPE html>
<html lang="en">
<%- include('../layouts/head.ejs') %>

<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <!-- Flash message -->
      <% if (messages.length !=0) { %>
      <% for(let i=0; i<messages.length; i++) { %>
      <div class="position-absolute" style="width: 100%; top: <%= (i * 60)+10+'px' %>;">
        <div class="alert alert-<%=messages[i].type%> fade show" style="z-index: 99999; width: auto; max-width: 40%; float: right;" id="flash-alert-<%= i * 2  %>" role="alert">
          <%= messages[i].msg %>
          <button type="button" class="btn btn-sm close" id="close" data-dismiss="alert" aria-label="Close" onclick="vanish(`#flash-alert-<%=(i * 2)%>`)">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
      <% } %>
      <% } %>

      <div class="content-wrapper d-flex align-items-center auth">
        <div class="row flex-grow">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left p-5">
              <div class="brand-logo mb-3">
                <img src="../../assets/images/logo.png">
              </div>
              <h4>Forgot password?</h4>
              <h6 class="font-weight-light">No worries. Just follow the steps -</h6>
              <form class="pt-2" action="/admin/user/forgot-password" method="post">
                <div class="mb-2">
                  <input type="email" class="form-control form-control-sm" id="exampleInputEmail1" placeholder="Email" name="email">
                </div>
                <div class="mb-2">
                  <input type="password" class="form-control form-control-sm" id="exampleInputPassword1" placeholder="Password" name="password">
                </div>
                <div class="mb-2">
                  <input type="password" class="form-control form-control-sm" id="exampleInputPassword2" placeholder="Confirm password" name="confirmPassword">
                </div>
                <div class="mt-3 d-grid gap-2">
                  <button type="submit" class="btn btn-block btn-gradient-primary btn-sm font-weight-medium auth-form-btn" style="height: auto;">RESET PASSWORD</button>
                </div>
                <div class="my-1 d-flex justify-content-center align-items-center">
                  <a href="/login" class="auth-link text-primary"><i class="mdi mdi-keyboard-backspace"></i> Back to login</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->

  <!-- scripts -->
  <%- include('../layouts/scripts.ejs') %>
</body>

</html>