<!DOCTYPE html>
<html lang="en">

<%- include('../../layouts/head.ejs') %>

<body>
  <div class="container-scroller">
    <!-- navbar -->
    <%- include('../../layouts/navbar.ejs') %>

    <div class="container-fluid page-body-wrapper">
      <!-- Flash message -->
      <% if (messages.length !=0) { %>
      <% for(let i=0; i<messages.length; i++) { %>
      <div class="position-absolute" style="width: 100%; top: <%= (i * 60)+10+'px' %>;">
        <div class="alert alert-<%=messages[i].type%> fade show" style="z-index: 99999; width: auto; max-width: 40%; float: right;" id="flash-alert-<%= i * 2  %>" role="alert">
          <%= messages[i].msg %>
          <button type="button" class="btn btn-sm close" id="close" data-dismiss="alert" aria-label="Close" onclick="vanish(`#flash-alert-<%=(i * 2)%>`)">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
      <% } %>
      <% } %>

      <!-- sidebar -->
      <%- include('../../layouts/sidebar.ejs') %>

      <!-- main-panel starts -->
      <div class="content-wrapper">
        <div class="page-header">
          <h3 class="page-title">
            <span class="page-title-icon bg-gradient-info text-white me-2">
              <i class="mdi mdi-information-variant fs-3"></i>
            </span> Colours
          </h3>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/expense/colors">Colour</a></li>
              <li class="breadcrumb-item active" aria-current="page">Create</li>
            </ol>
          </nav>
        </div>
        <div class="row">
          <div class="col-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body" style="height: calc(100vh - 266px); min-height: 300px;">
                <h4 class="card-title">Add New Colour</h4>
                <!-- <p class="card-description"> Edit your profile details here. </p> -->
                <form class="forms-sample" action="/admin/color/add" method="post">
                  <div class="mb-3 row">
                    <label for="exampleInputEmail2" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="exampleInputName" placeholder="Name" name="name">
                    </div>
                  </div>
                  <div class="mb-3 row">
                    <label for="exampleInputEmail2" class="col-sm-2 col-form-label">Colour</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="exampleInputEmail2" placeholder="Colour in HexCode" name="hexCode">
                    </div>
                  </div>
                  <button type="submit" class="btn btn-gradient-primary me-2">Save</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- main-panel ends -->

    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->

  <!-- scripts -->
  <%- include('../../layouts/scripts.ejs') %>
</body>

</html>